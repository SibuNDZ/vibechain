# Server Configuration
NODE_ENV=production
PORT=3001

# Database (use connection pooling like PgBouncer in production)
DATABASE_URL=postgresql://user:password@db-host:5432/vibechain?connection_limit=10

# Security
JWT_SECRET=your-256-bit-secret-key-here-use-openssl-rand-hex-32
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=https://vibechain.app

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Analytics API
ANALYTICS_API_URL=https://api.dsnresearch.com
ANALYTICS_API_KEY=dsn_your_api_key_here
ANALYTICS_SOURCE_NAME=vibechain_events
ANALYTICS_SOURCE_TYPE=events
ANALYTICS_TIMEOUT_MS=2500

# Blockchain RPC Endpoints (use paid providers like Infura/Alchemy in production)
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_AMOY_RPC_URL=https://polygon-amoy.infura.io/v3/YOUR_INFURA_KEY

# Optional: Monitoring
# SENTRY_DSN=https://your-sentry-dsn
